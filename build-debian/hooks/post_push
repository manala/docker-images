#!/bin/bash

FLAVOUR=${DOCKER_TAG#*-}

VERSION=${DOCKER_TAG%-*}
VERSION_MINOR=${VERSION%.*}
VERSION_MAJOR=${VERSION_MINOR%.*}

# Version - Minor
docker tag $IMAGE_NAME $DOCKER_REPO:$VERSION_MINOR-$FLAVOUR
docker push $DOCKER_REPO:$VERSION_MINOR-$FLAVOUR

# Version - Major
docker tag $IMAGE_NAME $DOCKER_REPO:$VERSION_MAJOR-$FLAVOUR
docker push $DOCKER_REPO:$VERSION_MAJOR-$FLAVOUR

# Flavour
docker tag $IMAGE_NAME $DOCKER_REPO:$FLAVOUR
docker push $DOCKER_REPO:$FLAVOUR
